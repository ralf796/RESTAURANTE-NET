@{
    ViewBag.Title = "Index";
}


@section scripts{
<script src="~/Scripts/Pedidos/PEDCliente.js"></script>
<script src="~/Scripts/DevExtreme/21.1.5/dx.all.js"></script>
<script src="~/Scripts/DevExtreme/21.1.5/localization/dx.messages.es.js"></script>
<link rel="stylesheet" href="~/Content/DevExtreme/21.1.5/dx.material.orange.light.css">
}
<style>
    #gridContainer .dx-scrollable-scroll {
        height: 50px !important;
    }

    #gridContainer .dx-scrollable-scroll-content {
        background-color: #FE650D !important;
    }

    table thead tr th {
        font-size: 12px !important;
    }

    table tbody tr td {
        font-size: 12px !important;
    }

    div.dt-buttons {
        position: relative;
        float: right;
        margin-top: -2px;
        margin-left: -15px;
    }

    .dataTables_length {
        float: left;
    }

    #gridContainer span.current-value {
        display: inline-block;
        margin-right: 5px;
    }

    #gridContainer span.diff {
        width: 50px;
        display: inline-block;
    }

    #gridContainer .inc {
        color: #2ab71b;
    }

    #gridContainer .neg {
        color: #060606;
    }

    #gridContainer .dec {
        color: #f00;
    }

        #gridContainer .inc .arrow,
        #gridContainer .dec .arrow {
            display: inline-block;
            height: 10px;
            width: 10px;
            background-repeat: no-repeat;
            background-size: 10px 10px;
        }

    #gridContainer .inc .arrow {
        /*background-image: url('data:image/png;base64,');*/
        background-image: url('data:image/svg+xml;base64,');
    }

    #gridContainer .dec .arrow {
        /*background-image: url('data:image/png;base64,');*/
        background-image: url('data:image/svg+xml;base64,');
    }

    .options {
        padding: 20px;
        margin-top: 20px;
        background-color: rgba(191, 191, 191, 0.15);
    }

    .caption {
        font-weight: 500;
        font-size: 18px;
    }

    .option {
        margin-top: 10px;
    }

        .option > span {
            position: relative;
            top: 2px;
            margin-right: 10px;
        }

        .option > .dx-widget {
            width: 500px;
            display: inline-block;
            vertical-align: middle;
        }
</style>

<div class="row">
    <div class="col-md-12">
        <div class="card" style="margin-top:-20px!important;">

            <div class="card-header card-header-danger card-header-text">
                <div class="card-text">
                    <h4 class="card-title">CLIENTES</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-sm-1 col-md-1 col-lg-1 col-xl-1">
                        <button id="btnAbrirModalCrearCliente" type="submit" class="btn btn-primary float-rigth"><i class="material-icons">add</i>Crear cliente</button>
                    </div>
                    <div class="demo-container col-md-12">
                        <div id="gridContainer"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modalCrearCliente" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modalTitle" class="modal-title">CREAR CLIENTE</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
            </div>
            <div class="modal-body">
                <form class="formValida" id="formCrearCliente">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <div class="form-group">
                                <label for="txtNombreClienteCrear" class="bmd-label-floating"> NOMBRE</label>
                                <input type="text" class="form-control" id="txtNombreClienteCrear" name="txtNombreClienteCrear" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                            <div class="form-group">
                                <label for="txtNitClienteCrear" class="bmd-label-floating"> NIT</label>
                                <input type="text" class="form-control" id="txtNitClienteCrear" name="txtNitClienteCrear" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                            <div class="form-group">
                                <label for="txtTelefonoClienteCrear" class="bmd-label-floating"> TELÉFONO</label>
                                <input type="number" class="form-control" id="txtTelefonoClienteCrear" name="txtTelefonoClienteCrear" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <div class="form-group">
                                <label for="txtDireccionCrearCliente" class="bmd-label-floating"> DIRECCIÓN</label>
                                <input type="text" class="form-control" id="txtDireccionCrearCliente" name="txtDireccionCrearCliente" required>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-center text-center">
                            <button type="button" id="btnCrearCliente" class="btn btn-link btn-deep-orange  justify-content-center text-center">Crear</button>
                            <button type="button" class="btn btn-link  justify-content-center text-center" data-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEditarCliente" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modalTitle" class="modal-title">EDITAR CLIENTE</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
            </div>
            <div class="modal-body">
                <form class="formValida" id="formCrearCliente">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <div class="form-group">
                                <label for="txtNombreClienteEditar" class="bmd-label-floating"> NOMBRE</label>
                                <input type="text" class="form-control" id="txtNombreClienteEditar" name="txtNombreClienteEditar" required>
                                <input type="hidden"  id="hfIdCliente" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                            <div class="form-group">
                                <label for="txtNitClienteEditar" class="bmd-label-floating"> NIT</label>
                                <input type="text" class="form-control" id="txtNitClienteEditar" name="txtNitClienteEditar" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                            <div class="form-group">
                                <label for="txtTelefonoClienteEditar" class="bmd-label-floating"> TELÉFONO</label>
                                <input type="number" class="form-control" id="txtTelefonoClienteEditar" name="txtTelefonoClienteEditar" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <div class="form-group">
                                <label for="txtDireccionEditarCliente" class="bmd-label-floating"> DIRECCIÓN</label>
                                <input type="text" class="form-control" id="txtDireccionEditarCliente" name="txtDireccionEditarCliente" required>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-center text-center">
                            <button type="button" id="btnEditarCliente" class="btn btn-link btn-deep-orange  justify-content-center text-center">Editar</button>
                            <button type="button" class="btn btn-link  justify-content-center text-center" data-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
