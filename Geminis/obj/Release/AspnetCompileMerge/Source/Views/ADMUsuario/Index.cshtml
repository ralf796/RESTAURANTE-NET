
@{
    ViewBag.Title = "Index";
}


@section scripts{
    <script src="~/Scripts/Administracion/ADMUsuario.js"></script>
    <script src="~/Scripts/DevExtreme/21.1.5/dx.all.js"></script>
    <script src="~/Scripts/DevExtreme/21.1.5/localization/dx.messages.es.js"></script>
    <link rel="stylesheet" href="~/Content/DevExtreme/21.1.5/dx.material.orange.light.css">
}
<style>
    #gridContainer .dx-scrollable-scroll {
        height: 50px !important;
    }

    #gridContainer .dx-scrollable-scroll-content {
        background-color: #FE650D !important;
    }

    table thead tr th {
        font-size: 12px !important;
    }

    table tbody tr td {
        font-size: 12px !important;
    }

    div.dt-buttons {
        position: relative;
        float: right;
        margin-top: -2px;
        margin-left: -15px;
    }

    .dataTables_length {
        float: left;
    }

    #gridContainer span.current-value {
        display: inline-block;
        margin-right: 5px;
    }

    #gridContainer span.diff {
        width: 50px;
        display: inline-block;
    }

    #gridContainer .inc {
        color: #2ab71b;
    }

    #gridContainer .neg {
        color: #060606;
    }

    #gridContainer .dec {
        color: #f00;
    }

        #gridContainer .inc .arrow,
        #gridContainer .dec .arrow {
            display: inline-block;
            height: 10px;
            width: 10px;
            background-repeat: no-repeat;
            background-size: 10px 10px;
        }

    #gridContainer .inc .arrow {
        /*background-image: url('data:image/png;base64,');*/
        background-image: url('data:image/svg+xml;base64,');
    }

    #gridContainer .dec .arrow {
        /*background-image: url('data:image/png;base64,');*/
        background-image: url('data:image/svg+xml;base64,');
    }

    .options {
        padding: 20px;
        margin-top: 20px;
        background-color: rgba(191, 191, 191, 0.15);
    }

    .caption {
        font-weight: 500;
        font-size: 18px;
    }

    .option {
        margin-top: 10px;
    }

        .option > span {
            position: relative;
            top: 2px;
            margin-right: 10px;
        }

        .option > .dx-widget {
            width: 500px;
            display: inline-block;
            vertical-align: middle;
        }
</style>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header card-header-deep-orange card-header-text">
                <div class="card-text">
                    <h4 class="card-title">Usuario</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="txtUsuarioBusqueda" class="bmd-label-floating">USUARIO</label>
                            <input id="txtUsuarioBusqueda" type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-xs-12">
                        <button id="btnCrearUsuario" class="btn btn-primary btn-round btn-fab" title="Crear Usuario">
                            <i class="material-icons">add</i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="card ">
            <div class="card-header secondary card-header-text">
                <div class="card-text">
                    <h4 class="card-title">Detalle de Busqueda</h4>
                </div>
            </div>
            <div class="card-body ">
                <form class="formValida">
                    <h4 id="h3NombreCompleto"></h4>
                    <input id="hfPlantaUsuario" type="hidden" />
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Usuario
                            <span id="spnUsuario" class="badge badge-primary badge-pill"></span>
                            <span id="spnNombreUsuario" class="badge badge-primary badge-pill"></span>
                            <button id="spnEstadoUsuario" class="btn btn-sm btn-round" title="Activar / Desactivar">
                            </button>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Contraseña
                            <span id="spnPassword" class="badge badge-primary badge-pill"></span>
                            <button id="btnCambioContrasena" class="btn btn-sm btn-success btn-round btn-fab" title="Cambiar Contraseña">
                                <i class="material-icons">settings_backup_restore</i>
                            </button>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Teléfono
                            <span id="spnTelefono" class="badge badge-primary badge-pill"></span>
                            <span id="spnTelefonosAsignados" class="badge badge-primary badge-pill"></span>
                        </li>
                    </ul>

                </form>
            </div>
        </div>
    </div>
</div>

@*----------------------------------MODAL CREACIÓN DE USUARIO----------------------------------*@
<div class="modal fade modal-mini modal-primary" id="modalCrearUsuario" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-small">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modalTitle" class="modal-title">CREAR USUARIO</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
            </div>
            <div class="modal-body">
                <form id="formCreacionUsers" class="formValida">
                    <div class="row">
                        @*----------EMPLEADO----------*@
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <div class="form-group">
                                <label class="bmd-label-floating label-with-selectpicker">EMPLEADO</label>
                                <select id="selEmpleadoUser" name="selEmpleadoUser" class="selectpicker"
                                        data-style="select-with-transition" title="EMPLEADO" data-live-search="true" required>
                                </select>
                                <span class="form-control-feedback">
                                    <i class="material-icons">done</i>
                                </span>
                            </div>
                        </div>
                        @*----------MODULO----------*@
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <div class="form-group">
                                <label class="bmd-label-floating label-with-selectpicker">MODULO</label>
                                <select id="selModuloUser" name="selModuloUser" class="selectpicker"
                                        data-style="select-with-transition" title="MODULO" data-live-search="true" required>
                                </select>
                                <span class="form-control-feedback">
                                    <i class="material-icons">done</i>
                                </span>
                            </div>
                        </div>
                        @*----------USUARIO----------*@
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <div class="form-group">
                                <label for="txtUser" class="bmd-label-floating">USUARIO</label>
                                <input type="text" class="form-control" id="txtUser" name="txtUser" required>
                                <span class="form-control-feedback">
                                    <i class="material-icons">done</i>
                                </span>
                            </div>
                        </div>
                        @*----------CONTRASEÑA----------*@
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <div class="form-group">
                                <label for="txtPassword" class="bmd-label-floating">CONTRASEÑA</label>
                                <input type="text" class="form-control pwd" id="txtPassword" name="txtPassword" required>
                                <span class="form-control-feedback">
                                    <i class="material-icons">done</i>
                                </span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-1 col-md-1 col-lg-1 col-xl-1 d-none">
                            <button id="btnVerContraseña" class="btn btn-primary btn-round btn-fab reveal" title="Ver contraseña" formnovalidate>
                                <i class="material-icons">visibility</i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnGuardarUsr" class="btn btn-link btn-deep-orange">Guardar</button>
                <button type="button" class="btn btn-link" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@*----------------------------------MODAL CREACIÓN DE USUARIO----------------------------------*@
<div class="modal fade modal-mini modal-primary" id="modalCambiarContraseña" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-small">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modalTitle" class="modal-title">CAMBIAR CONTRASEÑA</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
            </div>
            <div class="modal-body">
                <form id="formCambiarContra" class="formValida">
                    <div class="row">
                        @*----------USUARIO----------*@
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <div class="form-group">
                                <label for="txtUser" class="bmd-label-floating">NUEVA CONTRASEÑA</label>
                                <input type="text" class="form-control" id="txtNewPassword" name="txtNewPassword" required>
                                <span class="form-control-feedback">
                                    <i class="material-icons">done</i>
                                </span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCambiarContra" class="btn btn-link btn-deep-orange">Guardar</button>
                <button type="button" class="btn btn-link" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>