
@{
    ViewBag.Title = "Index";
}

<div class="row" id="idRow2" style="margin-top:-10PX">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 ml-auto mr-auto">
        <div class="card" style="margin-top:5px!important;">
            <div class="card-header card-header-deep-orange card-header-text">
                <div class="card-text">
                    <h4 class="card-title">REPORTE DE MESEROS</h4>
                </div>
            </div>
            <div class="card-body">
                <form id="formReporteporPiloto" class="formValida">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3">
                            <div class="form-group">
                                <label for="txtFechaInicial" class="bmd-label-floating label-with-selectpicker">DESDE</label>
                                <input type="text" class="form-control datepicker" id="txtFechaInicial" name="txtFechaInicial" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3">
                            <div class="form-group">
                                <label for="txtFechaFinal" class="bmd-label-floating label-with-selectpicker">HASTA</label>
                                <input type="text" class="form-control datepicker" id="txtFechaFinal" name="txtFechaFinal" required>
                            </div>
                        </div>
                        <div class="col-xl-1 col-lg-1 col-md-12 col-sm-12 col-xs-12">
                            <button id="btnGenerarReporte" class="btn btn-primary btn-round" title="GENERAR REPORTE">
                                <i class="material-icons">filter_list</i>
                                Generar
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="dx-datagrid-container  col-md-12">
                            <div id="gridContainer"></div>
                        </div>
                        <div class="col-md-12">
                            <div id="chart"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/assets/js/Utils.js"></script>
    <script src="~/Scripts/Reportes/REPMeseros.js"></script>
    <script src="~/Scripts/DevExtreme/21.1.5/dx.all.js"></script>
    <script src="~/Scripts/DevExtreme/21.1.5/localization/dx.messages.es.js"></script>
    <link rel="stylesheet" href="~/Content/DevExtreme/21.1.5/dx.material.orange.light.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-polyfill/7.4.0/polyfill.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/exceljs/3.3.1/exceljs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/1.3.8/FileSaver.min.js"></script>
}
